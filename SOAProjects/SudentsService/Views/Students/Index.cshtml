@model IEnumerable<SudentsService.Models.Student>

@{
    ViewBag.Title = "List Of Students";
}

<h2>Students List</h2>

<p>
    @Html.ActionLink("Create New Student", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enrolled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enrolled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RegId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RegId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RegId })
        </td>
    </tr>
}

</table>
